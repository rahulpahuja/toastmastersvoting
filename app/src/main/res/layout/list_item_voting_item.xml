<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginTop="@dimen/spacing_very_tiny"
    android:layout_marginBottom="@dimen/image_size_very_tiny"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
   >
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_tiny"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/spacing_tiny">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

    <TextView
        android:id="@+id/txt_user_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="8"
        android:background="@drawable/back_grid_pink"
        android:padding="@dimen/spacing_normal"
        android:textColor="@color/blue_grey_900"
        android:textStyle="bold"
        android:textSize="@dimen/font_extra_larger" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_user_count"
        android:layout_marginTop="-4dp"
        android:background="@color/colorPrimary"
       >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_normal"
            android:layout_marginBottom="@dimen/spacing_normal"/>


    </RelativeLayout>
</RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>
