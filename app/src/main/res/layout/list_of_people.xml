<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_of_candidates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Activity.ListOfCandidates">

    <ListView
        android:id="@+id/listview_list_of_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/heading_for_list_of_member"/>

    <TextView
        android:id="@+id/heading_for_list_of_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#89a8da"
        android:padding="10dp"
        android:text="heading_list_of_member"
        android:textAlignment="center"
        android:textSize="22dp"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add"
        android:visibility="gone"
        />

</RelativeLayout>
