<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_theme"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/RRKeyBoard">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RRLogo"
            android:layout_marginTop="10dp"
            android:textColor="#FFF"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="Enter new code"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="@dimen/dots_margin_bottom"
                android:gravity="center"
                android:orientation="horizontal"></LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I forget my code"
                android:textColor="@android:color/white"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_below="@+id/layoutDots"/>

        </RelativeLayout>






    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/RRKeyBoard"
        android:layout_width="match_parent"
        android:background="@color/colorKey"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="2"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="3"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="4"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="7"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="8"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="9"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="0"
                    android:visibility="invisible"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btn_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="30dp"
                    android:padding="10dp"/>

                <ImageView
                    android:id="@+id/imageViewBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"                                 android:text="0"
                    android:src="@drawable/ic_close_arrow"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</RelativeLayout>
