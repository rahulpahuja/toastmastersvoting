<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_of_candidates"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_tiny"
    tools:context=".view.Activity.ListOfCandidates">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_list_of_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_for_list_of_member"/>

    <TextView
        android:id="@+id/heading_for_list_of_member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:text="heading_list_of_member"
        android:textAlignment="center"
        android:textColor="@color/blue_grey_700"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="visible" />



</RelativeLayout>
